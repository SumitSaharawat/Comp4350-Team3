{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "start": "node --env-file=.env ./build/app",
    "dev": "set DEBUG=server && node --env-file=.env ./build/app",
    "debug": "set DEBUG=server* && node --env-file=.env ./build/app",
    "lint": "npx eslint .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "description": "Server",
  "author": {
    "name": ""
  },
  "main": "app.js",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.13.8",
    "pug": "^2.0.0-rc.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/bcrypt": "^5.0.2",
    "@types/debug": "0.0.30",
    "@types/express": "^4.0.37",
    "@types/express-serve-static-core": "^4.0.50",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mime": "^1.3.1",
    "@types/node": "^20.17.0",
    "@types/serve-static": "^1.7.32",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.57.1",
    "eslint-config-google": "^0.14.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.21.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "./tsconfig.json"
    }
  }
}
